pipeline {
    agent any 
    tools{
        nodejs 'node-1.5.1'
    }
    options{
        timeout (time: 2, unit: 'MINUTES')
    }
    stages {
        stage('Install dependencies') { 
            steps {
                sh 'cd jenkins test && npm i'
            }
        }
        stage('Run tests') { 
            steps {
                sh 'cd jenkins-test && npm t'
            }
        }
    }
}